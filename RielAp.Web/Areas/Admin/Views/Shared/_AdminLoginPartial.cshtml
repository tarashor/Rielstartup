@if (Request.IsAuthenticated) {
    <text>
        @RielAp.Translation.Translation.HelloMessageLabel @RielAp.Web.Infrastructure.CurrentUser.Instance.Name!
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", style="display: inline;" })) {
            <a href="javascript:document.getElementById('logoutForm').submit()" class="navbar-link">@RielAp.Translation.Translation.LogoutMessage</a>
        }
    </text>
}
else{
    @Html.ActionLink(RielAp.Translation.Translation.LoginMessage, "Login", "Account", new {returnUrl = Request.Path}, new {@class = "navbar-link",  style="display: inline; margin-right:5px;"})
    
}
