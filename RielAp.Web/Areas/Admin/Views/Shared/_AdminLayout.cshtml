@using RielAp.Translation;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>@ViewBag.Title - @Translation.MainTitleAddition</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <style type="text/css">
        html, body {
            min-width:1300px;
            width:100%;
        }

        .sidebar-nav {
            padding: 9px 0;
        }

        footer {
            padding: 18px;/*0px 19px 0px 19px;*/
            background-color: #f5f5f5;
            font-size: 12px;
            border-top: 1px solid #DDDDDD;
        }

    </style>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/Filter")
    

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
          <script src="../assets/js/html5shiv.js"></script>
        <![endif]-->

</head>

<body>

    <div class="navbar navbar-inverse">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="brand" href="/Admin"><img src="~/Content/images/home.png" style="height: 26px; margin-right: 10px;"/><span>@Translation.WebsiteTitle</span></a>
                <div class="nav-collapse collapse">
                    <div class="navbar-text pull-right">
                        @Html.Partial("_AdminLoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
