@using RielAp.Translation;
@model RielAp.Domain.Models.ApartmentAnnouncement

@{
    ViewBag.Title = Translation.EditApartmentAnnouncementTitle;
    Layout = "~/Views/Shared/_EditAnnouncementLayout.cshtml";
}

                    <h4 class="row-fluid">
                        @Translation.ApartmentDetailsPageRoomsCountLabel
                    </h4>
                    <div class="controls controls-row">
                        @Html.TextBoxFor(model => model.RoomsNumber, new { @class = "span12" })
                    </div>

                    <h4 class="row-fluid">
                        @Translation.AnnouncementEditApartmentTotalSquareLabel
                    </h4>
                    <div class="controls controls-row">
                        @Html.TextBoxFor(model => model.TotalSquare.Value, new { @class = "span9" })
                        @Html.DropDownListFor(model => model.TotalSquare.Unit, EnumsToSelectedListItems.GetSquareUnitsList(), new { @class = "span3" })
                    </div>

                    <h4 class="row-fluid">
                        @Translation.AnnouncementEditApartmentLivingSquareLabel
                    </h4>
                    <div class="controls controls-row">
                        @Html.TextBoxFor(model => model.LivingSquare.Value, new { @class = "span9" })
                        @Html.DropDownListFor(model => model.LivingSquare.Unit, EnumsToSelectedListItems.GetSquareUnitsList(), new { @class = "span3" })
                    </div>

                    <h4 class="row-fluid">
                        @Translation.ApartmentDetailsPageFloorLabel
                    </h4>
                    <div class="controls controls-row">
                        @Html.TextBoxFor(model => model.Floor, new { @class = "span6" }) <span class="span1" style="text-align: center;">з</span> @Html.TextBoxFor(model => model.MaxFloor, new { @class = "span5" })
                    </div>

                    <h4 class="row-fluid">
