@using RielAp.Translation;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Translation.AccountProfileEditTitle;
    ViewBag.CurrentPage = NavigationPage.None;
}

<h2>@ViewBag.Title</h2>

<div class="row-fluid">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
</div>

<div class="row-fluid">
    <div class="span3">
        <ul class="nav nav-tabs nav-stacked" id="navTabs">
            <li class="@(ViewBag.ProfileCurrentTab == ProfileViewType.MobileNumbers? "active" : "")"><a href="@Url.Action("EditPhones", "Account")" >@Translation.MobileNumbersProfileManagerTitle</a></li>
            <li class="@(ViewBag.ProfileCurrentTab == ProfileViewType.UserProfile ? "active" : "")"><a href="@Url.Action("UserProfile", "Account")" >@Translation.GeneralProfileManagerTitle</a></li>
            <li class="@(ViewBag.ProfileCurrentTab == ProfileViewType.PasswordChange ? "active" : "")"><a href="@Url.Action("PasswordChange", "Account")">@Translation.PasswordProfileManagerTitle</a></li>
        </ul>
    </div>
    <div class="span9">
        <div class="tab-content" style="overflow: visible;">
            <div class="tab-pane active" >
                @RenderBody()

            </div>
            
        </div>
    </div>
</div>

@section scripts{
     @Scripts.Render("~/bundles/js");
    @RenderSection("scripts", false)
}